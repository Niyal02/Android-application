<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bookCardViewParent"
    app:cardCornerRadius="7dp"
    app:cardElevation="7dp"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="456dp">

        <RelativeLayout
            android:layout_width="190dp"
            android:layout_height="344dp">

            // Initial Component before expansion

            <RelativeLayout
                android:id="@+id/collapsedCardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgBook"
                    android:layout_width="200dp"
                    android:layout_height="220dp"
                    android:src="@mipmap/hp" />

                <TextView
                    android:id="@+id/textBookName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgBook"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="Harry Potter"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/expandCardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgBook"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/ic_down_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/expandedRelLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/collapsedCardLayout">

                <TextView
                    android:id="@+id/authorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author: J.K Rowling" />

                <TextView
                    android:id="@+id/authorTextValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/authorText"
                    android:text="Author Name Value" />

                <TextView
                    android:id="@+id/textShortDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/authorTextValue"
                    android:layout_marginTop="10dp"
                    android:text="Short description" />

                <TextView
                    android:id="@+id/textShortDescriptionValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textShortDescription"
                    android:text="Short Description Value" />

                <ImageView
                    android:id="@+id/CollapseCardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textShortDescription"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_up_arrow" />


            </RelativeLayout>

        </RelativeLayout>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="186dp"
            android:layout_height="206dp"
            app:srcCompat="@mipmap/lion"
            tools:layout_editor_absoluteX="204dp"
            tools:layout_editor_absoluteY="0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>

        <TextView
            android:id="@+id/textBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="The lion king"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.838"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.52" />

        <TextView
            android:id="@+id/authorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author: Roger Allers"
            tools:layout_editor_absoluteX="221dp"
            tools:layout_editor_absoluteY="248dp" />

        <TextView
            android:id="@+id/authorTextValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/authorText"
            android:text="Author Name Value"
            tools:layout_editor_absoluteX="221dp"
            tools:layout_editor_absoluteY="267dp" />

        <TextView
            android:id="@+id/textShortDescription"
            android:layout_width="125dp"
            android:layout_height="21dp"
            android:layout_below="@id/authorTextValue"
            android:text="Short description"
            app:layout_constraintBottom_toTopOf="@+id/textShortDescriptionValue"
            app:layout_constraintTop_toBottomOf="@+id/authorText"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="219dp" />

        <TextView
            android:id="@+id/textShortDescriptionValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textShortDescription"
            android:text="Short Description Value"
            tools:layout_editor_absoluteX="219dp"
            tools:layout_editor_absoluteY="325dp" />

        <ImageView
            android:id="@+id/expandCardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgBook"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_down_arrow"
            tools:layout_editor_absoluteX="366dp"
            tools:layout_editor_absoluteY="226dp" />

        <ImageView
            android:id="@+id/CollapseCardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textShortDescription"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_up_arrow"
            tools:layout_editor_absoluteX="366dp"
            tools:layout_editor_absoluteY="320dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>